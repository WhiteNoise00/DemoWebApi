@model Test.Models.Task
@{
    ViewBag.Title = "Редактирование задачи";
}

<h2>@Model.Task_Name</h2>
<form asp-action="TaskEdit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Task_Name" class="control-label">Название задачи:</label>
        <input type="text" asp-for="Task_Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Task_Priority" class="control-label">Приоритет:</label>
        <input type="number" asp-for="Task_Priority" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Task_Customer_Department" class="control-label">Отдел-заказчик:</label>
        <input type="text" asp-for="Task_Customer_Department" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Task_Executing_Department" class="control-label">Отдел-исполнитель:</label>
        <input type="text" asp-for="Task_Executing_Department" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Task_Executor_Data" class="control-label">Информация об исполнителях:</label>
        <input type="text" asp-for="Task_Executor_Data" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Task_Beginning_Date" class="datefield">Начало задачи:</label>
        <input type="date" asp-for="Task_Beginning_Date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Task_Ending_Date" class="datefield">Окончание задачи:</label>
        <input type="date" asp-for="Task_Ending_Date" class="form-control" />
    </div>
    <!-- <select asp-for="TaskId" , asp-items="ViewBag.Tasks"></select> -->

    <div class="form-group">
        <input type="submit" value="Сохранить" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить сотрудника на исполнение" asp-action="AddEmployee" asp-controller="home" asp-route-id="@Model.Id" />
    </div>



</form>
