
@model Test.Models.Employee
@using Test.Models
@{
    ViewBag.Title = "Редактирование исполнителя";
}
<form asp-action="EmployeeEdit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Employee_Name" class="control-label">Имя исполнителя:</label>
        <input type="text" asp-for="Employee_Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Employee_Last_Name" class="control-label">Фамилия:</label>
        <input type="text" asp-for="Employee_Last_Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Employee_Middle_Name" class="control-label">Отчество:</label>
        <input type="text" asp-for="Employee_Middle_Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Employee_Email" class="control-label">Электронная почта:</label>
        <input type="email" asp-for="Employee_Email" class="form-control" />
    </div>
    <div class="editor-label"><b>Выбор задач:</b></div>
    @foreach (var t in ViewBag.Tasks)
    {
        <input type ="checkbox" name="selectedTasks" value="@t.Id" 
               @(Model.Tasks.Contains(t)? "checked=\"checked\"" : "") /> @t.Task_Name <br/>
    }

    <div class="form-group">
        <input type="submit" value="Сохранить" />
    </div>


</form>
