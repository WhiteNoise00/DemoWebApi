@model Test.Models.Position
@using Test.Models
@{
    ViewBag.Title = "Добавление новой должности";
}
<form asp-action="CreatePosition" asp-controller="position">
    <div class="form-group">
        <label asp-for="Position_Name" class="control-label"></label>
        <input type="text" asp-for="Position_Name" class="form-control" />
        <span asp-validation-for="Position_Name" class="text-danger"></span>
    </div>
    <div><select name="depid" asp-items="@ViewBag.DepartmentsList" class="form-control"></select></div>
    <div class="form-group">
        <input type="submit" value="Сохранить" />
    </div>

</form>